<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/motion_settings_title" android:key="parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:persistent="false" android:title="@string/motion_activation" android:key="motion_activation" />
    <SwitchPreferenceScreen android:title="@string/pick_up_to_call_out_title" android:key="pick_up_to_call_out" android:summary="@string/pick_up_to_call_out_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/pick_up_to_call_out_title" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/pick_up_title" android:key="pick_up" android:summary="@string/pick_up_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/pick_up_title" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/double_tap_title" android:key="double_tap" android:summary="@string/double_tap_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/double_tap_title" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/tilt_title" android:key="tilt" android:summary="@string/tilt_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/tilt_title" />
        <extra android:name="sensitivity" android:value="true" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/tilt_to_scroll_list_title" android:key="tilt_to_scroll_list" android:summary="@string/tilt_to_scroll_list_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/tilt_to_scroll_list_title" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/pan_title" android:key="pan" android:summary="@string/pan_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/pan_title" />
        <extra android:name="sensitivity" android:value="true" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/pan_to_browse_image_title" android:key="pan_to_browse_image" android:summary="@string/pan_to_browse_image_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/pan_to_browse_image_title" />
        <extra android:name="sensitivity" android:value="true" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/shake_title" android:key="shake" android:summary="@string/shake_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/shake_title" />
    </SwitchPreferenceScreen>
    <SwitchPreferenceScreen android:title="@string/turn_over_title" android:key="turn_over" android:summary="@string/turn_over_summary" android:dependency="motion_activation" android:fragment="com.android.OriginalSettings.motion.MotionView">
        <extra android:name="title" android:value="@string/turn_over_title" />
    </SwitchPreferenceScreen>
    <PreferenceCategory android:persistent="false" android:title="@string/surface_title" android:key="category_surface" />
    <CheckBoxPreference android:title="@string/palm_swipe_title" android:key="palm_swipe" android:summary="@string/palm_swipe_summary" />
    <CheckBoxPreference android:title="@string/palm_touch_title" android:key="palm_touch" android:summary="@string/palm_touch_summary" />
    <CheckBoxPreference android:title="@string/tap_and_twist_title" android:key="tap_and_twist" android:summary="@string/tap_and_twist_summary" />
</PreferenceScreen>
